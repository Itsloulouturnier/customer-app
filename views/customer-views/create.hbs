<h2>New Customer</h2>
<br>
<br>

<form action="/customer/create" method="post">
    <label for="firstNameInput">First Name: <input id="firstNameInput" type="text" name="firstName">
        </label>
    <label for="lastNameInput">Last Name: <input id="lastNameInput" type="text" name="lastName"> 
        </label>
    <label for="balanceInput">Customer Balance: <input id="balanceInput" type="number" name="balance">
        </label>
    <label for="loyaltyPointsInput">Loyalty Points: <input id="loyaltyPointsInput" type="number" name="loyaltyPoints">
        </label>
    <label for="whatsappNumberInput">Whatsapp Number: <input id="whatsappNumberInput" type="tel" name="whatsappNumber">
        </label>
    <label for="locationInput">Location: 
        {{!-- <input id="locationInput" type="text" name="location"> --}}
        <select name="location" id="locationInput">
                        {{#each locations}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
        </label>
    <button type="submit">Create Customer</button>
</form>

